<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Creatuity\OrderStatusAdjust\Model\Container\CalculatedOrderContainerInterface"
                type="Creatuity\OrderStatusAdjust\Model\Container\CalculatedOrderContainer"
    />

    <type name="Magento\Sales\Model\Order">
        <plugin name="creatuity_order_status_adjust_plugin"
                type="Creatuity\OrderStatusAdjust\Plugin\OrderStatusPlugin"
                sortOrder="99999999"
        />
    </type>

    <virtualType name="Creatuity\OrderStatusAdjust\DataProvider\FilterPool"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="Creatuity\OrderStatusAdjust\DataProvider\DataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Creatuity\OrderStatusAdjust\Model\ResourceModel\CustomCondition\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">Creatuity\OrderStatusAdjust\DataProvider\FilterPool</argument>
        </arguments>
    </virtualType>

    <type name="Creatuity\OrderStatusAdjust\Model\ResourceModel\Rule\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">order_status_adjust_rule</argument>
            <argument name="eventPrefix" xsi:type="string">order_status_adjust_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">order_status_adjust_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Creatuity\OrderStatusAdjust\Model\ResourceModel\Rule</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="order_status_adjust_listing_data_source" xsi:type="string">Creatuity\OrderStatusAdjust\Model\ResourceModel\Rule\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

</config>
